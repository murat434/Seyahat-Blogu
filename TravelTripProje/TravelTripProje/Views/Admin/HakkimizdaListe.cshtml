@model List<TravelTripProje.Models.Siniflar.Hakkimizda>
@{
    ViewBag.Title = "Hakkımızda Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Fotoğraf</th>
        <th>Açıklama</th>
        <th>İşlem</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td><img src="@item.FotoUrl" width="100" /></td>
            <td>@item.Aciklama</td>
            <td>
                <a href="/Admin/HakkimizdaGetir/@item.ID" class="btn btn-warning">Düzenle</a>
            </td>
        </tr>
    }
</table>
