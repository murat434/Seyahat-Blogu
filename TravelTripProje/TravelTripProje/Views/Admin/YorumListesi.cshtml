@using TravelTripProje.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>
                @(!string.IsNullOrEmpty(x.KullaniciAdi)
            ? (x.KullaniciAdi.Length > 20 ? x.KullaniciAdi.Substring(0, 20) + "..." : x.KullaniciAdi)
            : "Kullanıcı adı yok")
            </td>

            <td>
                @(!string.IsNullOrEmpty(x.Mail)
            ? (x.Mail.Length > 25 ? x.Mail.Substring(0, 25) + "..." : x.Mail)
            : "Mail yok")
            </td>

            <td>
            @(!string.IsNullOrEmpty(x.Yorum)
            ? (x.Yorum.Length > 50 ? x.Yorum.Substring(0, 50) + "..." : x.Yorum)
            : "Yorum yok")
            </td>

            <td>@x.Blog.Baslik</td>
            <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>

        </tr>
    }
</table>
